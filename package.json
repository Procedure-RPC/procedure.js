{
    "name": "@toebeann/procedure.js",
    "version": "0.1.0",
    "description": "A simple RPC framework, built on top of nanomsg and msgpack.",
    "main": "./dist/index",
    "types": "./types/index.d.ts",
    "author": "Tobey Blaber (https://github.com/toebeann)",
    "repository": "github:toebeann/procedure.js",
    "funding": "https://paypal.me/tobeyblaber",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "build": "tsc",
        "lint": "eslint . --ext .ts",
        "test": "mocha -r ts-node/register -r source-map-support/register ./test/**/*.ts",
        "test:coverage": "nyc npm run test"
    },
    "dependencies": {
        "@msgpack/msgpack": "^2.7.2",
        "nanomsg": "^4.2.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@toebeann/nanomsg": "^4.2.0",
        "@tsconfig/node16": "^1.0.3",
        "@types/chai": "^4.3.1",
        "@types/chai-as-promised": "^7.1.5",
        "@types/chai-spies": "^1.0.3",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.0.3",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.30.6",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "chai-quantifiers": "^1.0.17",
        "chai-spies": "^1.0.0",
        "eslint": "^8.20.0",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.1",
        "typed-emitter": "^2.1.0",
        "typescript": "^4.7.4"
    },
    "files": [
        "dist/**/*.js",
        "types/**/*.d.ts"
    ],
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "check-coverage": true,
        "reporter": [
            "html",
            "lcov",
            "text",
            "text-summary"
        ],
        "report-dir": "coverage"
    }
}
